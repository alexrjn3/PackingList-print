<div class="col d-flex justify-content-center">
			<form asp-action="Validate" asp-controller="Home" method="post">
			
				<input type="text" name="username" placeholder="User" style="background-color: orange" />
				</br> </br>
			

				<input type="password" name="password" placeholder="Password" style="background-color: orange"/>
				</br> </br>
			

				<input type="submit" value="Login" style="background-color: orange"/>
				</br> </br>
				@if(!string.IsNullOrEmpty(error))
				{
					<span style="color:red">@error</span>
				}
				
			</form>
			
</div>

@if (!string.IsNullOrEmpty(ViewBag.LoginError))
{
	<div class="col d-flex justify-content-center">
		<span style="color:red">@Html.Raw(ViewBag.LoginError)</span>
	</div>
}
